modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "NativeOS_Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DocAgent_Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "InfraAgent_Test"

[[workflows.workflow]]
name = "NativeOS_Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd \"$REPL_HOME\" && python3 agents/code-agent.py --test"

[[workflows.workflow]]
name = "DocAgent_Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd \"$REPL_HOME\" && python3 agents/doc-agent.py --test"

[[workflows.workflow]]
name = "InfraAgent_Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd \"$REPL_HOME\" && python3 agents/infra-agent.py --test"

[deployment]
run = ["sh", "-c", "cd \"$REPL_HOME\" && python3 agents/code-agent.py --test"]
